<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="container_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">0.5dp</item>
    </style>

    <!-- parent pega todos os estilos do container_button -->
    <style name="operators_button" parent="container_button">
        <item name="android:backgroundTint">@color/gradient_end</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="numbers_button" parent="container_button">
        <item name="android:backgroundTint">@color/gradient_start</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
</resources>