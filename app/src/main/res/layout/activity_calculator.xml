<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gradient_start"
    android:orientation="vertical"
    tools:context=".CalculatorActivity">

    <TextView
        android:id="@+id/txt_expression"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="start"
        android:gravity="end"
        android:singleLine="true"
        android:text="@string/algebraic_expression"
        android:textColor="@color/black"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/txt_result"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:gravity="end"
        android:maxLines="1"
        android:text="@string/result_txt"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_clear"
            style="@style/operators_button"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:text="@string/erase_fields" />

        <Button
            android:id="@+id/btnDiv"
            style="@style/operators_button"
            android:text="@string/div_signal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_seven"
            style="@style/numbers_button"
            android:text="@string/number_seven" />

        <Button
            android:id="@+id/btn_eight"
            style="@style/numbers_button"
            android:text="@string/number_eight" />

        <Button
            android:id="@+id/btn_nine"
            style="@style/numbers_button"
            android:text="@string/number_nine" />

        <Button
            android:id="@+id/btnMulti"
            style="@style/operators_button"
            android:text="@string/multi_signal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_four"
            style="@style/numbers_button"
            android:text="@string/number_four" />

        <Button
            android:id="@+id/btn_five"
            style="@style/numbers_button"
            android:text="@string/number_five" />

        <Button
            android:id="@+id/btn_six"
            style="@style/numbers_button"
            android:text="@string/number_six" />

        <Button
            android:id="@+id/btnSub"
            style="@style/operators_button"
            android:text="@string/sub_signal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_one"
            style="@style/numbers_button"
            android:text="@string/number_one" />

        <Button
            android:id="@+id/btn_two"
            style="@style/numbers_button"
            android:text="@string/number_two" />

        <Button
            android:id="@+id/btn_three"
            style="@style/numbers_button"
            android:text="@string/number_three" />

        <Button
            android:id="@+id/btnSum"
            style="@style/operators_button"
            android:text="@string/sum_signal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_dot"
            style="@style/numbers_button"
            android:text="@string/dot_signal" />

        <Button
            android:id="@+id/btn_zero"
            style="@style/numbers_button"
            android:text="@string/number_zero" />

        <ImageView
            android:id="@+id/btn_backspace"
            style="@style/numbers_button"
            android:contentDescription="@string/backspace_description"
            android:scaleType="center"
            android:src="@drawable/backspace" />

        <Button
            android:id="@+id/btnEqual"
            style="@style/operators_button"
            android:text="@string/equal_signal" />

    </LinearLayout>

</LinearLayout>